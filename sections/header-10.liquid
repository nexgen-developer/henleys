<style>

.scrolling-text{
  overflow:hidden;
}

.scrolling-text__inner{
  visibility:visible;
  white-space:nowrap;
  display:inline-flex;gap:5%;
  margin:0.15em 0;
  animation:scrolling-text {{section.settings.speed}}s linear infinite;
  animation-play-state:running;
}

.scrolling-text__inner--right{
  transform:translateX(-50%);
  animation:scrolling-text-right {{section.settings.speed}}s linear infinite;
}
.top-announcement-bar-item{padding:0 30px;}
.scrolling-text span{
  white-space:nowrap;
}

.scrolling-text:focus .scrolling-text__inner,.scrolling-text:hover .scrolling-text__inner{
  animation-play-state:paused;
}

@keyframes scrolling-text{
  0%{
    transform:translateX(0);
    -webkit-transform:translateX(0);
  }
  to{
    transform:translateX(-100%);
    -webkit-transform:translateX(-100%);
  }
}

@keyframes scrolling-text-right{
  0%{
    transform:translateX(-50%);
    -webkit-transform:translateX(-50%);
  }
  to{
    transform:translateX(0);
    -webkit-transform:translateX(0);
  }
}
  @media (max-width: 768px){
   body .scrolling-text__inner{gap:1%;}
  }
</style>
