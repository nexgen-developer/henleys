{% comment %}
  Otto Image Section 
{% endcomment %}

{% comment %}Image Data{% endcomment %}
{% capture image_name %}{{ section.settings.image_name | handle }}{% endcapture %}
{% assign image_metafield = shop.metafields.otto-components[image_name].value %}
{% assign has_mobile_image = image_metafield.has_mobile_image %}

{% comment %}Image Files{% endcomment %}
{% assign image_file = shop.metafields.otto-files[image_name].value %}
{% capture mobile_image_file_name %}{{ image_name }}-mobile{% endcapture %}
{% assign mobile_image_file = shop.metafields.otto-files[mobile_image_file_name].value %}

{% if image_metafield != blank %}
  {% if image_metafield.visible == true or image_metafield.visible == null %}
    <div class="otto-image-section otto-image-section--{{ section.settings.image_alignment }} otto-image-section--{{ section.id }}">
      {% comment %}Image{% endcomment %}
      {% if image_metafield.link != blank %}
        <a href="{{ image_metafield.link }}">
      {% endif %}
        <img src="{{ image_file | image_url }}" alt="{{ image_metafield.alt }}" class="otto-image {% if has_mobile_image and mobile_image_file != blank %}otto-image--desktop{% endif %}">
        {% if has_mobile_image and mobile_image_file != blank %}
          <img src="{{ mobile_image_file | image_url }}" alt="{{ image_metafield.alt }}" class="otto-image otto-image--mobile">
        {%  endif %}
      {% if image_metafield.link != blank %}
        </a>
      {% endif %}
  
      {% comment %}Content{% endcomment %}
      {% if section.settings.show_content %}
        <div class="otto-image-content otto-image-content-horizontal--{{ section.settings.content_horizontal_alignment }} otto-image-content-vertical--{{ section.settings.content_vertical_alignment }}">
          {% if image_metafield.header_text != blank %}
          	<{{ section.settings.header_font_tag }} class="otto-image-content__header">{{ image_metafield.header_text }}</{{ section.settings.header_font_tag }}>
          {% endif %}
          
          {% if image_metafield.subheader_text != blank %}
          	<{{ section.settings.subheader_font_tag }} class="otto-image-content__subheader">{{ image_metafield.subheader_text }}</{{ section.settings.subheader_font_tag }}>
          {% endif %}
          
          {% if image_metafield.body_text != blank %}
          	<{{ section.settings.body_font_tag }} class="otto-image-content__body">{{ image_metafield.body_text }}</{{ section.settings.body_font_tag }}>
          {% endif %}
          
          {% if image_metafield.button_text != blank or image_metafield.secondary_button_text != blank %}
            <div class="otto-btn-group">
              {% if image_metafield.button_text != blank %}
                <a class="otto-btn" href="{{ image_metafield.link }}">{{ image_metafield.button_text }}</a>
              {% endif %}
              {% if image_metafield.secondary_button_text != blank and image_metafield.secondary_button_link != blank %}
                <a class="otto-btn" href="{{ image_metafield.secondary_button_link }}">{{ image_metafield.secondary_button_text }}</a>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>

    <style>
    /* Structure */
  
    .otto-image-section--{{ section.id }} {
      display: block;
      position: relative;
      width: {{ section.settings.image_width_desktop }}%;
      margin: 0 auto {{ section.settings.image_margin_bottom }}px; 
    }
  
    /* Image */
    
    .otto-image {
      display: block;
      width: 100%;
    }
  
    .otto-image.otto-image--desktop {
      display: block;
    }
  
    .otto-image.otto-image--mobile {
      display: none;
    }
    
    /* Content */
  
    .otto-image-section--{{ section.id }} .otto-image-content {
      background: {% if section.settings.content_background_color != blank %}{{ section.settings.content_background_color }}{% else %}transparent{% endif %};
      color: {{ section.settings.content_text_color }};
      width: {{ section.settings.content_width }}%;
      padding: 30px;
      position: absolute;
    }

    .otto-image-section--{{ section.id }} .otto-image-content h1, 
    .otto-image-section--{{ section.id }} .otto-image-content h2, 
    .otto-image-section--{{ section.id }} .otto-image-content h3,
    .otto-image-section--{{ section.id }} .otto-image-content h4,
    .otto-image-section--{{ section.id }} .otto-image-content h5,
    .otto-image-section--{{ section.id }} .otto-image-content p {
      color: {{ section.settings.content_text_color }};
    }
    
    .otto-image-content-horizontal--center {
      left: 50%;
      transform: translateX(-50%);
      text-align: center;
    }
    
    .otto-image-content-horizontal--left {
      left: 0;
    }
    
    .otto-image-content-horizontal--right {
      right: 0;
    }
    
    .otto-image-content-vertical--center {
      top: 50%;
      transform: translateY(-50%);
    }
    
    .otto-image-content-vertical--top {
      top: 0;
    }
    
    .otto-image-content-vertical--bottom {
      bottom: 0;
    }
    
    .otto-image-content-horizontal--center.otto-image-content-vertical--center {
     transform: translate(-50%, -50%); 
    }
    
    .otto-image-section--{{ section.id }} .otto-image-content__header {
      margin: 0 0 10px;
      font-size: {{ section.settings.header_font_size }}em;
      line-height: 1.3;
    }
    
    .otto-image-section--{{ section.id }} .otto-image-content__subheader {
      margin: 0 0 10px;
      font-size: {{ section.settings.subheader_font_size }}em;
      line-height: 1.3;
    }
  
    .otto-image-section--{{ section.id }} .otto-image-content__body {
      margin: 0 0 10px;
      font-size: {{ section.settings.body_font_size }}em;
      line-height: 1.3;
    }

    .otto-image-section--{{ section.id }} .otto-btn {
      background: {{ section.settings.button_background_color }};
      color: {{ section.settings.button_text_color }};
      padding: 10px;
      display: inline-block;
      transition: all .3s ease-in-out;
      margin-top: 20px;
      text-decoration: none;
    }

    .otto-image-section--{{ section.id }} .otto-btn:nth-child(2) {
      margin-left: 5px;
    }
    
    .otto-image-section--{{ section.id }} .otto-btn:hover {
      background: {{ section.settings.button_background_hover_color }};
      color: {{ section.settings.button_text_hover_color }};
    }
    
    /* Responsive */
  
    @media all and (max-width: 1024px) {
      .otto-image-section--{{ section.id }} {
        width: {{ section.settings.image_width_mobile }}%;
      }
  
      .otto-image.otto-image--desktop {
        display: none;
      }
    
      .otto-image.otto-image--mobile {
        display: block;
      }

      .otto-image-section--{{ section.id }} .otto-image-content {
        background: {% if section.settings.mobile_content_background_color != blank %}{{ section.settings.mobile_content_background_color }}{% else %}transparent{% endif %};
        color: {{ section.settings.mobile_content_text_color }};
      }
      
      .otto-image-section--{{ section.id }} .otto-image-content h1, 
      .otto-image-section--{{ section.id }} .otto-image-content h2, 
      .otto-image-section--{{ section.id }} .otto-image-content h3,
      .otto-image-section--{{ section.id }} .otto-image-content h4,
      .otto-image-section--{{ section.id }} .otto-image-content h5,
      .otto-image-section--{{ section.id }} .otto-image-content p {
        color: {{ section.settings.mobile_content_text_color }};
      }
  
      .otto-image-section--{{ section.id }} .otto-image-content, .otto-image-content-horizontal--center {
        position: relative;
        transform: translate(0) !important;
        left: 0;
        top: 0;
        width: 100%;
        text-align: center;
      }  
  
      .otto-image-section--{{ section.id }} .otto-image-content__header {
        font-size: {{ section.settings.header_font_size_mobile }}em;
      }
      
      .otto-image-section--{{ section.id }} .otto-image-content__subheader {
        font-size: {{ section.settings.subheader_font_size_mobile }}em;
      }
  
      .otto-image-section--{{ section.id }} .otto-image-content__body {
        font-size: {{ section.settings.body_font_size_mobile }}em;
      }
    }
  </style>
  {%  endif %}
{% endif %}

