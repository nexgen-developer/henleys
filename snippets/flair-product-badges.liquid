        if _flair_match
          if flair_rule.operator == "lte" and flair_sale_percent_min <= flair_rule.sale_percent
            assign flair_rule_result = true
          elsif flair_rule.operator == "gte" and flair_sale_percent_max >= flair_rule.sale_percent
