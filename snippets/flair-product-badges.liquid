    if flair_badge.rules_apply_to == "all"
      unless flair_all_rule_results contains "0"
        assign flair_show_badge = true
      endunless
    elsif flair_all_rule_results contains "1"
      assign flair_show_badge = true
    endif

    if flair_show_badge
